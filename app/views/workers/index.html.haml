%h1 Список сотрудников

%table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Должность
      %th
      %th
      %th

  %tbody
    - @workers.each do |worker|
      %tr
        %td= worker.position
        %td= link_to 'Показать', worker, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_worker_path(worker), class: "btn btn-info"
        %td= link_to 'Удалить', worker, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Новый сотрудник', new_worker_path, class: "btn btn-success"

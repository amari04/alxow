%h1 Listing buildings

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Address
      %th Floor
      %th
      %th
      %th

  %tbody
    - @buildings.each do |building|
      %tr
        %td= building.address
        %td= building.floor
        %td= link_to 'Show', building, class: "btn btn-success btn-sm"
        %td= link_to 'Edit', edit_building_path(building), class: "btn btn-info btn-sm"
        %td= link_to 'Destroy', building, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger btn-sm"

%br

= link_to 'New Building', new_building_path, class: "btn btn-success"

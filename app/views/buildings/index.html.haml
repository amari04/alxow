%h1 Список корпусов

%table.table.table-hover
  %thead
    %tr
      %th Адрес
      %th Этажность
      %th
      %th
      %th

  %tbody
    - @buildings.each do |building|
      %tr
        %td= building.address
        %td= building.floor
        %td= link_to 'Показать', building, class: "btn btn-success btn-sm"
        %td= link_to 'Редактировать', edit_building_path(building), class: "btn btn-info btn-sm"
        %td= link_to 'Удалить', building, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger btn-sm"

%br

= link_to 'Добавить', new_building_path, class: "btn btn-success"

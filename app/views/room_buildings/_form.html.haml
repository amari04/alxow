= form_for @room_building do |f|
  - if @room_building.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room_building.errors.count, "error")} prohibited this room_building from being saved:"
      %ul
        - @room_building.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :Комната
    = f.text_field :room
  .field
    = f.label :Корпус
    = f.text_field :building
  .field
    = f.label :Этаж
    = f.number_field :floor
  .field
    = f.label :Атрибуты
    = f.text_area :attribute
  .actions
    = f.submit 'Сохранить', class: "btn btn-success"

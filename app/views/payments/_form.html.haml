= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :student
    = f.text_field :student
  .field
    = f.label :worker
    = f.text_field :worker
  .field
    = f.label :cost
    = f.number_field :cost
  .field
    = f.label :status
    = f.check_box :status
  .actions
    = f.submit 'Save'

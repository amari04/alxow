= form_for @guest do |f|
  - if @guest.errors.any?
    #error_explanation
      %h2= "#{pluralize(@guest.errors.count, "error")} prohibited this guest from being saved:"
      %ul
        - @guest.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :finish_date
    = f.date_select :finish_date
  .field
    = f.label :event
    = f.text_area :event
  .actions
    = f.submit 'Save'

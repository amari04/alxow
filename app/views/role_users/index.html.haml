%h1 Список роль-пользователь

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Роль
      %th Пользователь
      %th Данные
      %th
      %th
      %th

  %tbody
    - @role_users.each do |role_user|
      %tr
        %td= role_user.role
        %td= role_user.user
        %td= role_user.data
        %td= link_to 'Показать', role_user, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_role_user_path(role_user), class: "btn btn-info"
        %td= link_to 'Удалить', role_user, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Добавить', new_role_user_path, class: "btn btn-success"

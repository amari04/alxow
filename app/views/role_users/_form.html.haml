= form_for @role_user do |f|
  - if @role_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@role_user.errors.count, "error")} prohibited this role_user from being saved:"
      %ul
        - @role_user.errors.full_messages.each do |msg|
          %li= msg

  .row        
    .col-md-4
      .form-group
        = f.label :"Роль_id"
        = f.text_field :role_id, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :"Пользователь_id"
        = f.text_field :user_id, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :Данные
        = f.text_field :data, class: 'form-control'
  .actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', role_users_path, class: "btn btn-success"

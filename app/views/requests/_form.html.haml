= form_for @request do |f|
  - if @request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@request.errors.count, "error")} prohibited this request from being saved:"
      %ul
        - @request.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-md-4
      .form-group
        = f.label :person
        = f.text_field :person, class: 'form-control'
      .form-group
        = f.label :description
        = f.text_area :description, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :status
        = f.text_field :status, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :type
        = f.text_field :type, class: 'form-control'
  .actions
    = f.submit 'Save', class: "btn btn-success"

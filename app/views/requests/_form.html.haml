= form_for @request do |f|
  - if @request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@request.errors.count, "error")} prohibited this request from being saved:"
      %ul
        - @request.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-md-4
      .form-group
        = f.label :ФИО
        = f.text_field :person, class: 'form-control'
      .form-group
        = f.label :Описание
        = f.text_area :description, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :Статус
        = f.text_field :status, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :Тип
        = f.text_field :kind, class: 'form-control'
  .actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', requests_path, class: "btn btn-success"

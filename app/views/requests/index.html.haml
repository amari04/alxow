%h1 Список заявок

%table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th ФИО
      %th Описание
      %th Статус
      %th Тип
      %th
      %th
      %th

  %tbody
    - @requests.each do |request|
      %tr
        %td= request.person
        %td= request.description
        %td= request.status
        %td= request.kind
        %td= link_to 'Показать', request, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_request_path(request), class: "btn btn-info"
        %td= link_to 'Удалить', request, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Новая заявка', new_request_path, class: "btn btn-success"

%h1 Список заявок

%table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th ФИО
      %th Описание
      %th Статус
      %th Тип
      %th
      %th
      %th

  %tbody
    - @requests.each do |request|
      %tr
        %td= request.person
        %td= request.description
        %td= request.status
        %td= request.kind
        %td= link_to 'Show', request
        %td= link_to 'Edit', edit_request_path(request)
        %td= link_to 'Destroy', request, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Новая заявка', new_request_path, class: "btn btn-success"

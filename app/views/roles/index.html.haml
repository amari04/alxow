%h1 Список ролей

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Название
      %th Короткое название
      %th Англ.название
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.shortname
        %td= role.englishname
        %td= link_to 'Показать', role, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_role_path(role), class: "btn btn-info"
        %td= link_to 'Удалить', role, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Добавить', new_role_path, class: "btn btn-success"

%h1 Список ролей

%table
  %thead
    %tr
      %th Название
      %th Короткое название
      %th Англ.название
      %th
      %th
      %th

  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.shortname
        %td= role.englishname
        %td= link_to 'Показать', role
        %td= link_to 'Редактировать', edit_role_path(role)
        %td= link_to 'Удалить', role, :method => :delete, :data => { :confirm => 'Удалить?' }

%br

= link_to 'Добавить', new_role_path

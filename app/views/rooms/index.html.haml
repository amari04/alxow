%h1 Список комнат

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Количество мест
      %th Площадь
      %th Ванная
      %th Туалет
      %th
      %th
      %th

  %tbody
    - @rooms.each do |room|
      %tr
        %td= room.count_living_space
        %td= room.square
        %td= room.bathroom
        %td= room.toilet
        %td= link_to 'Показать', room, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_room_path(room), class: "btn btn-info"
        %td= link_to 'Удалить', room, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Добавить', new_room_path, class: "btn btn-success"

= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col-md-4
      .form-group
        = f.label :ФИО
        = f.select :person_id, options_for_select(student_options()), {}, class: 'form-control'
      .form-group
        = f.label :'Наличие справки'
        = f.check_box :medical_certificate
  .actions
    = f.submit 'Сохранить', class: "btn btn-success"
    \|
    = link_to 'Назад', students_path, class: "btn btn-success"

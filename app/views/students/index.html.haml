%h1 Listing students

%table.table-condensed.table-striped.table-hover
  %thead
    %tr
      %th Person
      %th Medical certificate
      %th
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.person
        %td= student.medical_certificate
        %td= link_to 'Show', student, class: "btn btn-success"
        %td= link_to 'Edit', edit_student_path(student), class: "btn btn-info"
        %td= link_to 'Destroy', student, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"

%br

= link_to 'New Student', new_student_path, class: "btn btn-success"

%h1 Список сотрудников

%table.table.table-striped.table-hover
  %thead
    %tr
      %th Корпус
      %th
      %th
      %th

  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.building
        %td= link_to 'Показать', employee, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_employee_path(employee), class: "btn btn-info"
        %td= link_to 'Удалить', employee, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Добавить', new_employee_path, class: "btn btn-success"

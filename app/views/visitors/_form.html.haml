= form_for @visitor do |f|
  - if @visitor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visitor.errors.count, "error")} prohibited this visitor from being saved:"
      %ul
        - @visitor.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ФИО
    = f.text_field :person
  .field
    = f.label :Заезд
    = f.date_select :start_date
  .field
    = f.label :Выезд
    = f.date_select :finish_date
  .field
    = f.label :Проживание
    = f.check_box :accommodation
  .actions
    = f.submit 'Сохранить', class: "btn btn-success" 

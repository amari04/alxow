= form_for @inventary do |f|
  - if @inventary.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inventary.errors.count, "error")} prohibited this inventary from being saved:"
      %ul
        - @inventary.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-md-4 
      .form-group
        = f.label :room
        = f.text_field :room, class: 'form-control'
  .row        
    .col-md-4
      .form-group
        = f.label :invent_numb
        = f.text_field :invent_numb, class: 'form-control'
  .row
    .col-md-4 
      .form-group
        = f.label :type
        = f.text_field :type, class: 'form-control'
  .row        
    .col-md-4 
      .form-group
        = f.label :status
        = f.text_field :status, class: 'form-control'
  .actions
    = f.submit 'Save', class: "btn btn-success"

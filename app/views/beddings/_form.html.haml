= form_for @bedding do |f|
  = error_messages_for @bedding
  .row
    .col-md-4 
      .form-group
        = f.label :person
        = f.text_field :person, class: 'form-control'
        = f.error_messages_for :person
    .col-md-4 
      .form-group
        = f.label :count
        = f.text_field :count, class: 'form-control'
        = f.error_messages_for :count
    .col-md-4 
      .form-group
        = f.label :type
        = f.text_field :type, class: 'form-control'
        = f.error_messages_for :type
  .row
    .col-md-4 
      .actions
        = f.submit 'Save', class: "btn btn-success"

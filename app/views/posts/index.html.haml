%h1 Список должностей

%table
  %thead
    %tr
      %th Название
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.name
        %td= link_to 'Показать', post, class: "btn btn-success"
        %td= link_to 'Редактировать', edit_post_path(post), class: "btn btn-info"
        %td= link_to 'Удалить', post, :method => :delete, :data => { :confirm => 'Удалить?' }, class: "btn btn-danger"

%br

= link_to 'Добавить', new_post_path, class: "btn btn-success"

= form_for @person do |f|
  - if @person.errors.any?
    #error_explanation
      %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
      %ul
        - @person.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :last_name
    = f.text_area :last_name
  .field
    = f.label :first_name
    = f.text_area :first_name
  .field
    = f.label :second_name
    = f.text_area :second_name
  .field
    = f.label :birthday
    = f.date_select :birthday
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :series
    = f.text_field :series
  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :organization
    = f.text_area :organization
  .field
    = f.label :pass_date
    = f.date_select :pass_date
  .field
    = f.label :address
    = f.text_area :address
  .actions
    = f.submit 'Save'
